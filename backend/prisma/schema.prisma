generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model UserCredentials {
  id           String       @id @default(uuid())
  userId       String       @unique
  passwordHash String
  details      UserDetails?
}

model UserGoals {
  id       String       @id @default(uuid())
  userId   String       @unique
  details  UserDetails?
  carbs    Float
  proteins Float
  fats     Float
  fiber    Float
  salt     Float
  calories Float
}

model UserDetails {
  id            String          @id @default(uuid())
  username      String
  credentials   UserCredentials @relation(fields: [id], references: [userId])
  goals         UserGoals       @relation(fields: [id], references: [userId])
  name          String
  surname       String
  weight        Float
  height        Float
  birthdate     DateTime
  sex           Float
  email         String
  meals         Meal[]
}

model Food {
  id          String  @id @default(uuid())
  name        String
  description String
  calories    Float
  proteins    Float
  carbs       Float
  fats        Float
  fiber       Float
  salt        Float
  eaten       Eaten[]
  deleted     Boolean @default(false)
}

model Eaten {
  id       String @id @default(uuid())
  foodId   String
  food     Food   @relation(fields: [foodId], references: [id])
  quantity Float
  meal     Meal[]
}

model Meal {
  id     String      @id @default(uuid())
  userId String
  user   UserDetails @relation(fields: [userId], references: [id])
  food   Eaten[]
  date   DateTime
  type   String
}
